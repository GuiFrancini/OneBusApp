<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:padding="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloOperacoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minhas Operações"
            android:textColor="#0090DB"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <!-- Texto de operações -->
        <TextView
            android:id="@+id/txtOperacoes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:text="Carregando operações..."
            android:textColor="#B693DB"
            android:textSize="16sp"
            android:background="#333333"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvTituloOperacoes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <Button
            android:id="@+id/btnVoltarLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Voltar ao Login"
            android:textAllCaps="false"
            android:padding="12dp"
            android:backgroundTint="#0090DB"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/txtOperacoes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
