<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:padding="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloGestor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Painel do Gestor"
        android:textColor="#0090DB"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Linhas disponíveis -->
    <TextView
        android:id="@+id/txtTituloLinhas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linhas disponíveis:"
        android:textColor="#0090DB"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloGestor"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/txtLinhas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="..."
        android:textColor="#B693DB"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtTituloLinhas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ônibus disponíveis -->
    <TextView
        android:id="@+id/txtTituloOnibus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ônibus disponíveis:"
        android:textColor="#0090DB"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txtLinhas"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/txtOnibus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="..."
        android:textColor="#B693DB"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtTituloOnibus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título Cadastrar -->
    <TextView
        android:id="@+id/txtCadastrarOperacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar Operação"
        android:textColor="#0090DB"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txtOnibus"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Campos de entrada -->
    <EditText
        android:id="@+id/edtResponsavel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nome do responsável"
        android:inputType="text"
        android:textColor="#B693DB"
        android:textColorHint="#0090DB"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtCadastrarOperacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/edtLinha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nome da linha"
        android:inputType="text"
        android:textColor="#B693DB"
        android:textColorHint="#0090DB"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edtResponsavel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/edtSentido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Sentido (ida/volta)"
        android:inputType="text"
        android:textColor="#B693DB"
        android:textColorHint="#0090DB"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edtLinha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/edtHorario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Horário"
        android:inputType="text"
        android:textColor="#B693DB"
        android:textColorHint="#0090DB"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edtSentido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/edtPrefixo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Prefixo do ônibus"
        android:inputType="text"
        android:textColor="#B693DB"
        android:textColorHint="#0090DB"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edtHorario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Botão -->
    <Button
        android:id="@+id/btnCadastrarOperacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar Operação"
        android:textAllCaps="false"
        android:padding="12dp"
        android:backgroundTint="#0090DB"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/edtPrefixo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />


        <Button
            android:id="@+id/btnVoltarLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Voltar ao Login"
            android:textAllCaps="false"
            android:padding="12dp"
            android:backgroundTint="#B693DB"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/btnCadastrarOperacao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>